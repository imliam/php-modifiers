{
    "name": "imliam/php-modifiers",
    "description": "Apply optional modifiers to PHP functions",
    "keywords": [
        "imliam",
        "php-modifiers"
    ],
    "homepage": "https://github.com/imliam/php-modifiers",
    "license": "MIT",
    "authors": [
        {
            "name": "Liam Hammett",
            "email": "liam@liamhammett.com",
            "homepage": "https://liamhammett.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "ImLiam\\Modifiers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ImLiam\\Modifiers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "test:windows": "vendor\\bin\\phpunit",
        "test-coverage:windows": "vendor\\bin\\phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
